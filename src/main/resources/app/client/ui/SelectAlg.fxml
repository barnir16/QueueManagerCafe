<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="app.client.ui.SelectAlgController"
            prefWidth="250.0" prefHeight="180.0"
            style="-fx-background-color: #ecf0f1; -fx-padding: 10;">
   <children>
      <Label layoutX="10.0" layoutY="10.0"
             text="Select Algorithm:" />
      <RadioButton fx:id="timeBasedRadio"
                   layoutX="10.0" layoutY="40.0"
                   text="Time Based" selected="true" />
      <RadioButton fx:id="batchRadio"
                   layoutX="10.0" layoutY="65.0"
                   text="Batch Item" />
      <RadioButton fx:id="memberPriorityRadio"
                   layoutX="10.0" layoutY="90.0"
                   text="Member Priority" />
      <RadioButton fx:id="itemWeightRadio"
                   layoutX="10.0" layoutY="115.0"
                   text="Item Weight" />
      <Button fx:id="okButton"
              layoutX="60.0" layoutY="145.0"
              text="OK"
              onAction="#handleOk"
              style="-fx-background-color: #2980b9; -fx-text-fill: white;" />
      <Button fx:id="cancelButton"
              layoutX="120.0" layoutY="145.0"
              text="Cancel"
              onAction="#handleCancel"
              style="-fx-background-color: #e74c3c; -fx-text-fill: white;" />
   </children>
</AnchorPane>
