<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="app.client.ui.ChangeItemWeightController"
            prefHeight="200.0" prefWidth="250.0"
            style="-fx-background-color: #ecf0f1; -fx-padding: 10;">

    <children>
        <Label layoutX="10.0" layoutY="10.0"
               text="Change Item Weight"
               style="-fx-font-size: 16px; -fx-font-weight: bold;" />

        <ComboBox fx:id="itemCombo"
                  layoutX="10.0" layoutY="50.0"
                  prefWidth="200.0" />

        <TextField fx:id="weightField"
                   layoutX="10.0" layoutY="90.0"
                   promptText="New Weight"
                   prefWidth="200.0" />

        <Button fx:id="applyButton"
                layoutX="10.0" layoutY="140.0"
                text="Apply"
                onAction="#handleApply"
                style="-fx-background-color: #2980b9; -fx-text-fill: white;" />

        <Button fx:id="cancelButton"
                layoutX="130.0" layoutY="140.0"
                text="Cancel"
                onAction="#handleCancel"
                style="-fx-background-color: #95a5a6; -fx-text-fill: white;" />
    </children>
</AnchorPane>
