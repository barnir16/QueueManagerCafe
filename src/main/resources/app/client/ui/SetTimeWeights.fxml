<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="app.client.ui.SetTimeWeightsController"
            fx:id="rootPane"
            prefHeight="200.0" prefWidth="250.0"
            styleClass="root-pane">

    <children>
        <Label layoutX="10.0" layoutY="10.0"
               text="Set Time Weights"
               styleClass="label"
               style="-fx-font-size: 14; -fx-font-weight: bold;" />

        <TextField fx:id="lowField"
                   layoutX="10.0" layoutY="50.0"
                   promptText="Low" />

        <TextField fx:id="midField"
                   layoutX="10.0" layoutY="85.0"
                   promptText="Mid" />

        <TextField fx:id="highField"
                   layoutX="10.0" layoutY="120.0"
                   promptText="High" />

        <Button layoutX="10.0" layoutY="160.0"
                text="OK"
                styleClass="button"
                onAction="#handleOk" />

        <Button layoutX="80.0" layoutY="160.0"
                text="Cancel"
                styleClass="button"
                onAction="#handleCancel" />
    </children>
</AnchorPane>