<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="app.client.ui.SetTimeWeightsController"
            prefHeight="200.0" prefWidth="250.0"
            style="-fx-background-color: #ecf0f1; -fx-padding: 10;">
    <children>
        <Label layoutX="10.0" layoutY="10.0"
               text="Set Time Weights"
               style="-fx-font-size: 14px; -fx-font-weight: bold;" />

        <TextField fx:id="lowField"
                   layoutX="10.0" layoutY="50.0"
                   promptText="Low" />

        <TextField fx:id="midField"
                   layoutX="10.0" layoutY="85.0"
                   promptText="Mid" />

        <TextField fx:id="highField"
                   layoutX="10.0" layoutY="120.0"
                   promptText="High" />

        <Button fx:id="okButton"
                layoutX="10.0" layoutY="160.0"
                text="OK"
                onAction="#handleOk"
                style="-fx-background-color: #2980b9; -fx-text-fill: white;" />

        <Button fx:id="cancelButton"
                layoutX="80.0" layoutY="160.0"
                text="Cancel"
                onAction="#handleCancel"
                style="-fx-background-color: #95a5a6; -fx-text-fill: white;" />
    </children>
</AnchorPane>
