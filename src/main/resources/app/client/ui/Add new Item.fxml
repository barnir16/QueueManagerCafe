<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<!--
  Merged with fx:controller and fx:id so you can handle button clicks in
  AddNewItemController.java
-->
<Pane xmlns="http://javafx.com/javafx/11.0.14-internal"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="app.client.ui.AddNewItemController"
      prefHeight="215.0" prefWidth="210.0"
      style="-fx-background-color: #ecf0f1;">

   <children>
      <!-- Label heading -->
      <Label layoutX="25.0" layoutY="14.0"
             style="-fx-font-size: 14px; -fx-text-fill: #2c3e50;"
             text="Enter new item details:" />

      <!-- TextFields with fx:id -->
      <TextField fx:id="itemNameField"
                 layoutX="38.0" layoutY="48.0"
                 prefHeight="25.0" prefWidth="145.0"
                 promptText="Item Name"
                 style="-fx-background-color: white;" />

      <TextField fx:id="itemWeightField"
                 layoutX="38.0" layoutY="86.0"
                 prefHeight="25.0" prefWidth="145.0"
                 promptText="Item Weight"
                 style="-fx-background-color: white;" />

      <!-- Add button -->
      <Button fx:id="addButton"
              layoutX="38.0" layoutY="128.0"
              mnemonicParsing="false"
              prefHeight="25.0" prefWidth="60.0"
              style="-fx-background-color: #2980b9; -fx-text-fill: white; -fx-background-radius: 5;"
              text="Add"
              onAction="#handleAdd" />

      <!-- Close button -->
      <Button fx:id="closeButton"
              layoutX="114.0" layoutY="128.0"
              mnemonicParsing="false"
              prefHeight="25.0" prefWidth="69.0"
              style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-background-radius: 5;"
              text="Close"
              onAction="#handleClose" />
   </children>
</Pane>
