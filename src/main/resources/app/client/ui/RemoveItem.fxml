<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="app.client.ui.RemoveItemController"
            fx:id="rootPane"
            prefHeight="150.0" prefWidth="250.0"
            styleClass="root-pane">

    <children>
        <Label layoutX="10.0" layoutY="10.0"
               text="Remove an Item"
               styleClass="label"
               style="-fx-font-size: 16; -fx-font-weight: bold;" />

        <ComboBox fx:id="itemComboBox"
                  layoutX="10.0" layoutY="50.0"
                  prefWidth="200.0" />

        <Button layoutX="10.0" layoutY="100.0"
                text="Remove"
                styleClass="button"
                onAction="#handleRemove" />

        <Button layoutX="130.0" layoutY="100.0"
                text="Cancel"
                styleClass="button"
                onAction="#handleCancel" />
    </children>
</AnchorPane>