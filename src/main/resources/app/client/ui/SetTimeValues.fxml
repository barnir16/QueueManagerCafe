<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="app.client.ui.SetTimeValuesController"
            prefHeight="140.0" prefWidth="250.0"
            style="-fx-background-color: #ecf0f1; -fx-padding: 10;">

    <children>
        <Label layoutX="10.0" layoutY="10.0"
               text="Set Time Thresholds (minutes):"
               style="-fx-font-size: 14px;" />

        <TextField fx:id="timeLowField"
                   layoutX="10.0" layoutY="40.0"
                   promptText="Low threshold" />

        <TextField fx:id="timeMidField"
                   layoutX="10.0" layoutY="75.0"
                   promptText="Mid threshold" />

        <!-- No fx:id if not used -->
        <Button layoutX="10.0" layoutY="110.0"
                text="Save"
                onAction="#handleSave"
                style="-fx-background-color: #2980b9; -fx-text-fill: white;" />

        <Button layoutX="80.0" layoutY="110.0"
                text="Cancel"
                onAction="#handleCancel"
                style="-fx-background-color: #95a5a6; -fx-text-fill: white;" />
    </children>
</AnchorPane>
