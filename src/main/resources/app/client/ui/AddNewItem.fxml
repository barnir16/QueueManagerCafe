<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="app.client.ui.AddNewItemController"
            prefHeight="200.0" prefWidth="250.0"
            style="-fx-background-color: #ecf0f1; -fx-padding: 10;">
   <children>
      <Label layoutX="10.0" layoutY="10.0"
             text="Enter new item details:"
             style="-fx-font-size: 14px; -fx-text-fill: #2c3e50;" />

      <TextField fx:id="itemNameField"
                 layoutX="10.0" layoutY="50.0"
                 promptText="Item Name"
                 prefWidth="200.0" />

      <TextField fx:id="itemWeightField"
                 layoutX="10.0" layoutY="85.0"
                 promptText="Item Weight"
                 prefWidth="200.0" />

      <Button fx:id="addButton"
              layoutX="10.0" layoutY="130.0"
              text="Add"
              onAction="#handleAdd"
              style="-fx-background-color: #2980b9; -fx-text-fill: white;" />

      <Button fx:id="closeButton"
              layoutX="130.0" layoutY="130.0"
              text="Close"
              onAction="#handleClose"
              style="-fx-background-color: #e74c3c; -fx-text-fill: white;" />
   </children>
</AnchorPane>
