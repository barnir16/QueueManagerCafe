<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="app.client.ui.AddNewItemController"
            fx:id="rootPane"
            prefHeight="200.0" prefWidth="250.0"
            styleClass="root-pane">

   <children>
      <Label layoutX="10.0" layoutY="10.0"
             text="Enter new item details:"
             styleClass="label"
             style="-fx-font-size: 14;" />

      <TextField fx:id="itemNameField"
                 layoutX="10.0" layoutY="50.0"
                 promptText="Item Name"
                 prefWidth="200.0" />

      <TextField fx:id="itemWeightField"
                 layoutX="10.0" layoutY="85.0"
                 promptText="Item Weight"
                 prefWidth="200.0" />

      <Button layoutX="10.0" layoutY="130.0"
              text="Add"
              styleClass="button"
              onAction="#handleAdd" />

      <Button layoutX="130.0" layoutY="130.0"
              text="Close"
              styleClass="button"
              onAction="#handleClose" />
   </children>
</AnchorPane>