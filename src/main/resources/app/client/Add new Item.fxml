<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.*?>

<AnchorPane prefHeight="230.0" prefWidth="250.0" style="-fx-background-color: #2c3e50;" xmlns="http://javafx.com/javafx/11.0.14-internal" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <VBox alignment="CENTER" spacing="15.0" layoutX="25.0" layoutY="20.0">
         <children>
            <Label text="Enter new item details:" style="-fx-font-size: 16px; -fx-text-fill: #ecf0f1; -fx-font-weight: bold;" />

            <TextField text="Item Name" style="-fx-background-color: #ecf0f1; -fx-text-fill: #2c3e50; -fx-padding: 5;" />
            <TextField text="Item Weight" style="-fx-background-color: #ecf0f1; -fx-text-fill: #2c3e50; -fx-padding: 5;" />

            <HBox spacing="15.0" alignment="CENTER">
               <Button text="Add" prefWidth="80.0" style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-background-radius: 5;" />
               <Button text="Close" prefWidth="80.0" style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-background-radius: 5;" />
            </HBox>
         </children>
      </VBox>
   </children>
</AnchorPane>
