<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="250.0" prefWidth="300.0" style="-fx-background-color: #2c3e50;" xmlns="http://javafx.com/javafx/11.0.14-internal" xmlns:fx="http://javafx.com/fxml/1">
    <children>
        <VBox alignment="CENTER" layoutX="20.0" layoutY="20.0" spacing="15.0">
            <children>
                <Label style="-fx-font-size: 16px; -fx-text-fill: #ecf0f1; -fx-font-weight: bold;" text="Select an item and set weight" />

                <MenuButton style="-fx-background-color: #34495e; -fx-text-fill: white;" text="Select Item" textFill="WHITE">
                    <items>
                        <MenuItem text="Action 1" />
                        <MenuItem text="Action 2" />
                    </items>
                </MenuButton>

                <TextField style="-fx-background-color: #ecf0f1; -fx-text-fill: #2c3e50; -fx-padding: 5;" text="New Weight" />

                <HBox alignment="CENTER" spacing="15.0">
                    <Button prefWidth="80.0" style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-background-radius: 5;" text="Apply" />
                    <Button prefWidth="80.0" style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-background-radius: 5;" text="Close" />
                </HBox>
            </children>
        </VBox>
    </children>
</AnchorPane>
